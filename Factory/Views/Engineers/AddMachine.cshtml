@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>MACHINE ASSIGNMENT</h1>
<hr />
<h2>Assign @Html.DisplayFor(model => model.Name) to a machine</h2>

@if (Enumerable.Count(ViewBag.MachineId) != 0)
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select Machine")
    <br>
    @Html.DropDownList("MachineId")
    <br>
    <br>
    <input type="submit" value="Save">
  }
}
else
{
  <h4>There aren't any machines available to assign</h4>
  <p>@Html.ActionLink("Add new Machine", "Create", "Machines", null, new {@class="button"})</p>
}
<hr />
<p>@Html.ActionLink("Back to engineer list", "Index", "Engineers", null, new {@class="button"})</p>