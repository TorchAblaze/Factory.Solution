@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>EDIT MACHINE</h1>
<hr />

<h2>@Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  <br>
  @Html.EditorFor(model => model.Name)
  <br>
  <br>
  @Html.LabelFor(model => model.InstallDate)
  <br>
  @Html.EditorFor(model => model.InstallDate)
  <br>
  <br>
  @Html.LabelFor(model => model.Repairs)
  <br>
  @Html.EditorFor(model => model.Repairs)
  <br>
  <br>
  @Html.LabelFor(model => model.Urgency)
  <br>
  @Html.EditorFor(model => model.Urgency)
  <br>
  <br>
  @Html.LabelFor(model => model.RepairDate)
  <br>
  @Html.EditorFor(model => model.RepairDate)
  <br>
  <br>
  @if (Enumerable.Count(ViewBag.EngineerId) != 0)
  {
    @Html.Label("Assign Engineer")
    <br>
    @Html.DropDownList("EngineerId")
    <br>
    <br>
  }
  <input type="submit" value="Save">
  <br>
  <br>
}
<hr />
<p>@Html.ActionLink("Back to Machine List", "Index", "Machine", null, new {@class="button"})</p>